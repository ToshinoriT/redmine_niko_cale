<h4><%= index_for(feeling, true) %></h4>
<p align="right"><%= link_to_feeling_list(:user=>feeling.user) %>
  <ul>
    <%= link_to_feeling(feeling) %>
  </ul>
<% if feeling.has_comment? %>
   <p><%= h(feeling.comment) %></p>
<% end %>
<% if editable?(feeling.at) %>
   <p><%= link_to edit_image, {:action=>:edit, :date=>feeling.at, :project_id=>(@project ? @project.id : nil)}  %>
   <%= link_to delete_image, 
       {:action=>:edit, :date=>feeling.at, :project_id=>(@project ? @project.id : nil), :confirm=>"OK?"},
       {:method=>:delete}  %></p>
<% end %>
